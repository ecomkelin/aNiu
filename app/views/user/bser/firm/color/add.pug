extends ../aalayout/layout

block content
	.container.mt-3
		.row
			.col-10
				h3 #{title}
			.col-2
				button.btn.btn-light(type="button", onclick="window.history.go(-1)") <span class="oi oi-x"></span>
		hr
		form#add(method="post", action=thisAct+"New", enctype="multipart/form-data")
			if orderId
				-a;
				input(type="hidden", name="obj[order]", value=orderId)
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="iptCode") #{Lang.code}
				.col-8.col-sm-6
					input#iptCode.form-control(type="text", name="obj[code]", value=code, autocomplete="off")
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="iptNome").text-info #{Lang.name}
				.col-8.col-sm-6
					input#iptNome.form-control(type="text", name="obj[nome]", autocomplete="off")
				.col-4.d-block.d-sm-none
				.col-8.col-sm-4
					span#optName(style="display:none").text-danger #{Lang.optName}
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="iptTel").text-info Tel
				.col-8.col-sm-6
					input#iptTel.form-control(type="text", name="obj[tel]", autocomplete="off")
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="iptIva") P.IVA
				.col-8.col-sm-6
					input#iptIva.form-control(type="text", name="obj[iva]", autocomplete="off")
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="iptAddr") Addr.
				.col-8.col-sm-6
					input#iptAddr.form-control(type="text", name="obj[addr]", autocomplete="off")
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="iptPost") #{Lang.zip}
				.col-8.col-sm-6
					input#iptPost.form-control(type="text", name="obj[post]", autocomplete="off")
			.form-group.row
				label.col-4.col-sm-2.col-form-label(for="iptDoct") #{Lang.docu}
				.col-8.col-sm-6
					input#iptDoct.form-control(type="text", name="obj[doct]", autocomplete="off")
			hr
			.form-group.row
				.offset-sm-2.col-sm-6
					input.btn.btn-info.btn-block(type="submit" value=Lang.add)
	script(src="/js/bser/customer/add.js")